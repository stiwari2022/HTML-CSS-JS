<script>
var SI=1;
SS(SI);

function PS(n) {
  SS(SI=SI+n);
}

function CS(n) {
  SS(SI=n);
}

function SS(n) {
  var i;
  var slides = document.getElementsByClassName("M");
  var Ds = document.getElementsByClassName("D");
  if (n>slides.length) {SI=1}    
  if (n<1) {SI=slides.length}
  for (i=0; i<slides.length; i++) {
      slides[i].style.display="none";  
  }
  for (i=0; i<Ds.length; i++) {
      Ds[i].className = Ds[i].className.replace(" active", "");
  }
  slides[SI-1].style.display="block";  
  Ds[SI-1].className+=" active";
}
</script>

<script>
function OP(PN, E, Color) {
  var C
  var inside;
  var tabs;
  inside=document.getElementsByClassName("inside");
  for (C=0; C<inside.length; C++) {
    inside[C].style.display="none";
  }
  tabs=document.getElementsByClassName("same");
  for (C=0; C<tabs.length; C++) {
    tabs[C].style.backgroundColor="";
  }  document.getElementById(PN).style.display="block";
  E.style.backgroundColor=Color;
}
document.getElementById("defaultOpen").click();
</script>
